# Search
--type-set=coffee=.coffee
--type-set=cucumber=.feature
--type-set=haml=.haml
--type-set=sass=.sass,.scss
--type-set=zsh=.zsh,.sh,.zsh-theme
--type-set=markdown=.md,.markdown,.txt
--type-set=html=.htm,.html,.shtml,.xhtml,.html,.erb
--color-match=green
# --color-lineno=yellow
--color-filename=yellow
--smart-case
--ignore-dir=public/assets

# Don't search
--ignore-dir=log
--ignore-dir=tags
--ignore-dir=tmp
